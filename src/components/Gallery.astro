---
const images = [
  "https://res.cloudinary.com/dflhguvio/image/upload/v1771621318/WhatsApp_Image_2026-02-20_at_3.01.43_PM_rb3skw.jpg",
  "https://res.cloudinary.com/dflhguvio/image/upload/v1771621374/WhatsApp_Image_2026-02-20_at_3.02.38_PM_qczuij.jpg",
  "https://res.cloudinary.com/dflhguvio/image/upload/v1771621446/590419052_18496440130072273_2923590184202874921_n_tpuzzz.jpg",
  "https://res.cloudinary.com/dflhguvio/image/upload/v1771621452/588579815_18496440145072273_1706720539163291983_n_vr5eyr.jpg",
];
---

<section id="gallery" class="py-32 px-6 md:px-12 lg:px-24">
  <div class="container mx-auto max-w-7xl">
    <h2 class="text-sm uppercase tracking-ultra-wide text-off-white/40 mb-16">
      Gallery
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-12 gap-6">
      <div class="md:col-span-8 aspect-[4/3] overflow-hidden group">
        <img
          src={images[0]}
          alt="Performance"
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
          loading="lazy"
        />
      </div>

      <div
        class="md:col-span-4 aspect-[3/4] md:aspect-auto overflow-hidden group"
      >
        <img
          src={images[1]}
          alt="Performance"
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
          loading="lazy"
        />
      </div>

      <div
        class="md:col-span-5 aspect-[3/4] md:aspect-auto overflow-hidden group"
      >
        <img
          src={images[2]}
          alt="Performance"
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
          loading="lazy"
        />
      </div>

      <div class="md:col-span-7 aspect-[4/3] overflow-hidden group">
        <img
          src={images[3]}
          alt="Performance"
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
          loading="lazy"
        />
      </div>
    </div>
  </div>
</section>
