---
const images = [
  'https://images.pexels.com/photos/1763075/pexels-photo-1763075.jpeg?auto=compress&cs=tinysrgb&w=1200',
  'https://images.pexels.com/photos/1105666/pexels-photo-1105666.jpeg?auto=compress&cs=tinysrgb&w=800',
  'https://images.pexels.com/photos/1540406/pexels-photo-1540406.jpeg?auto=compress&cs=tinysrgb&w=800',
  'https://images.pexels.com/photos/2952834/pexels-photo-2952834.jpeg?auto=compress&cs=tinysrgb&w=800',
];
---

<section id="gallery" class="py-32 px-6 md:px-12 lg:px-24">
  <div class="container mx-auto max-w-7xl">
    <h2 class="text-sm uppercase tracking-ultra-wide text-off-white/40 mb-16">
      Gallery
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-12 gap-6">
      <div class="md:col-span-8 aspect-[4/3] overflow-hidden group">
        <img
          src={images[0]}
          alt="Performance"
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
          loading="lazy"
        />
      </div>

      <div class="md:col-span-4 aspect-[3/4] md:aspect-auto overflow-hidden group">
        <img
          src={images[1]}
          alt="Performance"
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
          loading="lazy"
        />
      </div>

      <div class="md:col-span-5 aspect-[3/4] md:aspect-auto overflow-hidden group">
        <img
          src={images[2]}
          alt="Performance"
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
          loading="lazy"
        />
      </div>

      <div class="md:col-span-7 aspect-[4/3] overflow-hidden group">
        <img
          src={images[3]}
          alt="Performance"
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
          loading="lazy"
        />
      </div>
    </div>
  </div>
</section>
